set -e

echo "EMLinux 3.0 \\\n \\\l" > /etc/issue
echo "EMLinux 3.0" > /etc/issue.net

HOSTNAME=EMLinux3

echo "$HOSTNAME" > /etc/hostname
echo "127.0.0.1 $HOSTNAME" >> /etc/hosts

