#!/bin/sh

sdk_install_dir="@EMLINUX_SDK_INSTALL_DIR@"

SDK_USR_BIN="${sdk_install_dir}/usr/bin"

export PATH="${SDK_USR_BIN}:${PATH}"

export CC="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-gcc"
export CXX="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-g++"
export CPP="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-cpp"
export AS="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-as"
export LD="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-ld$"
export STRIP="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-strip"
export RANLIB="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-ranlib"
export OBJCOPY="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-objcopy"
export OBJDUMP="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-objdump"
export AR="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-ar"
export NM="${SDK_USR_BIN}/@EMLINUX_SDK_TOOLCHAIN_PREFIX@-nm"
